mysql> drop table if exists test.t;
mysql> create table if not exists test.t(a bigint, b double);
mysql> insert into test.t values(1, 1.9);
mysql> insert into test.t values(-1, 1.9);
mysql> insert into test.t values(-9999999999999999, -99999999999999999999);
mysql> insert into test.t values(9999999999999999, 99999999999999999999);
mysql> alter table test.t set tiflash replica 1;
func> wait_table test t

mysql> set tidb_enforce_mpp=1; set tidb_isolation_read_engines='tiflash'; select a, oct(a), b, oct(b) from test.t;
